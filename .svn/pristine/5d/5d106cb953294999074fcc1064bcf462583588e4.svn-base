            }
        }
        /* sidebar... body */
        .sidebar-nav{
            width: 100%;
            float: left;
            margin: 0;
            list-style: none;
            padding-left: 0;

            li {
                display: block;
                width: 100%;
                overflow: hidden;
                a {
                    padding: 0 10px 0 10px;
