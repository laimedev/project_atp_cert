                    }
                }

                &.dropdown {
                    div:first-of-type{                
                        &.show{display: none;}                
                }
                }
            }

            
        }
    //}
}


.main-content {
    margin-left: 75px;
    margin-right: 15px;
    transition: all 0.25s;
    padding-top: 85px;
    //width: 100%;
}

@media (max-width: 768px){
    .main-content {
        margin-left: 0;
        margin-right: 0;
        //min-width: 100%;
    }
}


